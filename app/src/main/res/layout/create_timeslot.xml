<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#908681">

    <ImageButton
        android:id="@+id/backButt"
        android:layout_width="@dimen/back_size"
        android:layout_height="@dimen/back_size"
        android:contentDescription="@string/back_button_description"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/return_button" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:text="Create New Availability Slot"
        android:textColor="#651d32"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/datePickerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Select Date:"
        android:backgroundTint="#651d32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/startTimePickerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Select Start Time:"
        android:backgroundTint="#651d32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePickerButton" />

    <Button
        android:id="@+id/endTimePickerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Select End Time:"
        android:backgroundTint="#651d32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startTimePickerButton" />

    <TextView
        android:id="@+id/approvalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Approval Preference:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/endTimePickerButton"
        app:layout_constraintTop_toBottomOf="@+id/endTimePickerButton" />

    <RadioGroup
        android:id="@+id/approvalRadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/endTimePickerButton"
        app:layout_constraintStart_toStartOf="@+id/endTimePickerButton"
        app:layout_constraintTop_toBottomOf="@+id/approvalLabel">

        <RadioButton
            android:id="@+id/manualApprovalRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Manual Approval"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/autoApproveRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto-Approve"
            android:layout_weight="1"/>
    </RadioGroup>

    <Button
        android:id="@+id/createSlotButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Create Slot"
        android:backgroundTint="#651d32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/endTimePickerButton"
        app:layout_constraintStart_toStartOf="@+id/endTimePickerButton" />

</androidx.constraintlayout.widget.ConstraintLayout>